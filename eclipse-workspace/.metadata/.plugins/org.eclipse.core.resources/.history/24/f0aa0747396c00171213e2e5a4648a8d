package testing_package;

public class Point {
	private double x;
	private double y;
	private double z;
	
	public Point(double x, double y) {
		this.x = x;
		this.y = y;
	}
	
	public static Point pointFromRTheta(double r, double theta) {
		Point rTheta = new Point();
		rTheta.setR(r);
		
	}
	
	public Point() {
		this(1.0, 1.0);
	}
	
	public double getX() {
		return x;
	}
	
	public double getY() {
		return y;
	}
	
	public void setX(double x) {
		this.x = x;
	}
	
	public void setY(double y) {
		this.y = y;
	}
	/**
	 * Get the distance coordinate in polar system
	 * @return the distance from the origin
	 */
	public double getR() {
		return Math.sqrt(x*x + y*y);
	}
	
	public void setR(double r) {
		double theta = getTheta();
		x = r * Math.cos(theta);
		y = r * Math.sin(theta);
	}
	
	/**
	 * Get the angle coordinate in polar system.
	 * @return the angle in radians counterclockwise from east
	 * within range
	 */ 
	public double getTheta() {
		return Math.atan2(y,x);
	}
	
	public void setTheta(double theta) {
		double r = getR();
		x = r * Math.cos(theta);
		x = r * Math.sin(theta);
	}
	
	public String toString() {
		return "Point(x="+x+"y="+getY()+")";
	}
	
	/**
	 * Calculate the distance between this point and another.
	 * @param other point to calculate distance to
	 * @return the distance
	 */
	public double distance(Point other) {
		double dx = other.x - x;
		double dy = other.y - y;
		return Math.sqrt(dx*dx + dy*dy);
	}
	
	public static double distance(Point a, Point b) {
		return a.distance(b);
	}

}
