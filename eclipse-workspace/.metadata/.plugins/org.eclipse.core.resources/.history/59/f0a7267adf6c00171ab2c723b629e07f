package benyon_lab3;

import java.util.Scanner;

public class GameRound {

	
	public static void main(String[] args) {
		GuessGame rounds = new GuessGame(0,100,500);
		welcome();
		captureGuess(rounds);	
	}
	
	public static void welcome() {
		System.out.print("This is a guessing game where you will guess a"
				+ "number and I tell you if it is too low or too high.");
	}
	
	public static void roundPrint(int min, int max) {
		System.out.printf("Guess a number between %d and %d", min, max);
	}
	
	public static void captureGuess(GuessGame example) {
		Scanner userInput = new Scanner(System.in);
		roundPrint(example.getRangeMinimum(), example.getRangeMinimum());
		int newGuess = userInput.nextInt();
		example.Guess(newGuess);
		
	}

}
