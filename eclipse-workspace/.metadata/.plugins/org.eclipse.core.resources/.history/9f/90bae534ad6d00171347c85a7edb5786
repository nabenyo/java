package benyon_lab3;

import java.util.Scanner;

public class GameRound {

	
	public static void main(String[] args) {
		int guesses = 0;
		GuessGame rounds = new GuessGame(0,100,200);
		boolean succeed = false;
		welcome();
		while (succeed == false) {
			succeed = captureGuess(rounds);
			guesses++;
		}
		System.out.printf("That's correct!\n You guessed %d time(s)", guesses);
	
	}
	
	public static void welcome() {
		System.out.print("This is a guessing game where you will guess a"
				+ "number and I tell you if it is too low or too high.\n");
	}
	
	public static void roundPrint(int min, int max) {
		System.out.printf("Guess a number between %d and %d\n", min, max);
	}
	
	public static boolean captureGuess(GuessGame example) {
		Scanner userInput = new Scanner(System.in);
		roundPrint(example.getRangeMinimum(), example.getRangeMaximum());
		int newGuess = userInput.nextInt();
		return example.Guess(newGuess);
		
	}

}
