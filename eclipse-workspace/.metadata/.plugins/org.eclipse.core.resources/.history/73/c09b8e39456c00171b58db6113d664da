package benyon_lab2;

import java.util.Random;

public class LoadedDie {
	private int sides;
	
	public void DiceMake(int sides) {
		this.sides = sides;
	}
	
	public int getSides() {
		return sides;
	}
	
	public int roll() {
		Random randomNumbers = new Random();
		int number = randomNumbers.nextInt(this.sides)+1;
		return number;
	}
}
